{
  "name": "padatika",
  "version": "0.0.1",
  "description": "A customizable footnote system inspired by wikipedia.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --minify --sourcemap --dts",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "check-format": "prettier . --check",
    "format": "prettier . --write"
  },
  "keywords": [
    "footnotes",
    "endnotes",
    "citations",
    "references",
    "notes"
  ],
  "author": "Ashutosh Biswas",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "eslint": "^8.57.0",
    "prettier": "3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.5.0"
  }
}
